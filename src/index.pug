doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    link(rel="icon" type="image/svg+xml" href="/assets/vite.svg")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Vite App
  body
    nav
      ul
        - for (let x = 1; x <= 10; x++)
          li
            a(href=`#m${x}`) m#{String(x).padStart(2, '0')}
    - for (let x = 1; x <= 10; x++)
      section(id=`m${x}`)
        div(data-anime="framein") title#{String(x).padStart(2, '0')}
  footer footer
    script(type="module" src="js/main.js")

